<% frame = "platform_posts" %>
<div class="w-full">
  <%= search_form_for @query, method: :get, data: { turbo_frame: frame, turbo_action: "advance" } do |f| %>  
    <%= render partial: "shared/index/top", locals: { hide_new: true, search_field: "class_name_cont", form: f, filter: @filter } %>

    <div id="posts" class="min-w-full">        
      <%= turbo_frame_tag frame do %>      
        <%= render partial: "table", layout: "shared/index/table", locals: { current_sort: params[:query].try(:[], :s), form: f, frame: frame, last_changed_field: @last_changed_field } %>
        <%= render partial: "shared/index/paginator", locals: { pagy: @pagy } %>
      <% end %>
    </div>  
  <% end %>      
</div>
