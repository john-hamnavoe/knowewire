<% frame = "platform_company_outlets" %>
<div class="w-full">
  <%= search_form_for @query, url: request.path , method: :get, data: { turbo_frame: frame, turbo_action: "advance" } do |f| %>  
    <%= render partial: "shared/index/top", locals: { hide_new: true, search_field: "description_or_abbreviated_description_cont", form: f } %>

    <div id="company_outlets" class="min-w-full">      
      <%= turbo_frame_tag frame do %>            
        <%= render partial: "table", layout: "shared/index/table", locals: { current_sort: params[:query].try(:[], :s), form: f, frame: frame, last_changed_field: @last_changed_field } %>
        <%= render partial: "shared/index/paginator", locals: { pagy: @pagy } %>
      <% end %>
    </div>  
  <% end %>      
</div>
