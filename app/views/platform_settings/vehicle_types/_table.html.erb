<table class="min-w-full divide-y divide-gray-300">
  <thead class="bg-gray-50">
    <tr>
      <%= render "shared/table/sort_table_header", query: @query, column: "description", current_sort: current_sort %>
      <%= render "shared/table/sort_table_header", query: @query, column: "code", current_sort: current_sort %>
      <%= render "shared/table/sort_table_header", query: @query, column: "collection_type", current_sort: current_sort %>      
      <%= render "shared/table/sort_table_header", query: @query, column: "is_deleted", current_sort: current_sort %>      
      <%= render "shared/table/sort_table_header", query: @query, column: "guid", current_sort: current_sort %>           

    </tr>
    <tr>
      <%= render "shared/table/search_table_header", form: form, search_field: "description_cont", last_changed_field: last_changed_field %>
      <%= render "shared/table/search_table_header", form: form, search_field: "code_cont", last_changed_field: last_changed_field %>
      <%= render "shared/table/search_table_header", form: form, search_field: "collection_type_cont", last_changed_field: last_changed_field %>      
      <%= render "shared/table/search_table_header", form: form, search_field: "is_deleted_true", last_changed_field: last_changed_field %>         
      <%= render "shared/table/search_table_header", form: form, search_field: "guid_eq", last_changed_field: last_changed_field %>         

    </tr>    
  </thead>

  <tbody class="divide-y divide-gray-200 bg-white">
    <% @platform_vehicle_types.each do |platform_vehicle_type| %>
      <%= render "platform_vehicle_type", platform_vehicle_type: platform_vehicle_type %>
    <% end %>
  </tbody>
</table>
